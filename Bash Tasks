#bash script to print a pyramid pattern of "#"
rows=7; 
  
for((m=1; m<=rows; m++)) 
do
    for((a=i; a<=rows; a++)) 
    do
      echo -ne " "; 
    done
   
    for((n=1; n<=m; n++)) 
    do
      echo -ne "#"; 
    done
  
    for((i=1; i<m; i++)) 
    do
      echo -ne "#"; 
    done
    echo; 
done



